@using MonitoringSystem.Application.Common.Models;
@using MonitoringSystem.Application.UseCases.Teachers.Models;
@model PaginatedList<TeacherDto>

@{
    ViewData["Title"] = "All Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optionally, specify a layout
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
    }
    
    h5 {
        text-align: left;
        margin-top: 20px;
    }


    p {
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        width: 50%;
        margin: 50px auto;
        overflow-x: auto;
    }

    .table {
        width: fit-content;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e0e0e0;
    }

</style>

<h3> Teachers</h3>
<h5>This is the list of teachers whose subjects has students who have accomplished 97 score at least. </h5>



<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 40%;">First Name</th>
                <th style="width: 40%;">Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model.Items)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                </tr>
            }

        </tbody>
    </table>
</div>
