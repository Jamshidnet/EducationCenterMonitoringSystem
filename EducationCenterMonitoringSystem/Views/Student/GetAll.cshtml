@using MonitoringSystem.Application.Common.Models;
@using MonitoringSystem.Application.UseCases.Students.Models;
@model IEnumerable<StudentDto>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "All Students";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optionally, specify a layout
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
    }

    p {
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        width: 80%;
        margin: 20px auto;
        overflow-x: auto;
    }

    .table {
        width: fit-content;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e0e0e0;
    }

    .action-links {
        display: flex;
    }

        .action-links a {
            margin-right: 10px;
            padding: 6px 12px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }

    .search-form {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .search-input {
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        flex: 1;
        margin-right: 10px;
    }

    .search-button {
        padding: 8px 16px;
        font-size: 16px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .search-loading {
        position: relative;
        pointer-events: none;
    }

        .search-loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 16px;
            height: 16px;
            border: 2px solid #fff;
            border-top-color: transparent;
            border-radius: 50%;
            animation: search-spin 0.8s linear infinite;
        }
</style>

<h3> Students</h3>

<form action="@Url.Action("SearchedStudents", "Filters")" method="get">
    <input type="text" name="Pattern" placeholder="Enter search term" />
    <button type="submit">Search</button>
</form>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 40%;">First Name</th>
                <th style="width: 40%;">Last Name</th>
                <th style="width: 20%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td class="action-links">
                        <a href="@Url.Action("Update", student)">Edit</a>
                        <a href="@Url.Action("Details", new { id = student.Id })">Details</a>
                        <a href="@Url.Action("Delete", new { id = student.Id })">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


<div class="container fixed-bottom d-flex align-items-center justify-content-center">
    @Html.PagedListPager((IPagedList)Model,page => Url.Action("GetAll", "Student",new{ page= page}),
    new X.PagedList.Web.Common.PagedListRenderOptions
    {
    DisplayItemSliceAndTotal = false,
    ContainerDivClasses = new[] { "navigation" },
    LiElementClasses = new[] { "page-item" },
    PageClasses = new[] { "page-link" },
    })
</div>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create Student</a>
</p>
