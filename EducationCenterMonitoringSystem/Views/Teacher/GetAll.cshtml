@using MonitoringSystem.Application.Common.Models;
@using MonitoringSystem.Application.UseCases.Teachers.Models;
@model PaginatedList<TeacherDto>

@{
    ViewData["Title"] = "All Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optionally, specify a layout
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
    }

    p {
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        width: 80%;
        margin: 20px auto;
        overflow-x: auto;
    }

    .table {
        width: fit-content;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e0e0e0;
    }

    .action-links {
        display: flex;
    }

        .action-links a {
            margin-right: 10px;
            padding: 6px 12px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }
</style>

<h3>All Teachers</h3>



<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 40%;">First Name</th>
                <th style="width: 40%;">Last Name</th>
                <th style="width: 20%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model.Items)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td class="action-links">
                        <a href="@Url.Action("Update", teacher)">Edit</a>
                        <a href="@Url.Action("Details", new { id = teacher.Id })">Details</a>
                        <a href="@Url.Action("Delete", new { id = teacher.Id })">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create Teacher</a>
</p>
