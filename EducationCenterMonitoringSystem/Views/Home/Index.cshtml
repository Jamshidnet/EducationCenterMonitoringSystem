@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Layout2.cshtml"; // Optionally, specify a layout

}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome to School Monitoring System</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        /* Custom CSS Styles */
        body {
            background-image: url("https://catherineasquithgallery.com/uploads/posts/2023-02/1676603463_catherineasquithgallery-com-p-fon-dlya-prezentatsii-zelenii-s-knigoi-128.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            min-height: 100vh;
        }

        .jumbotron {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 40px;
            border-radius: 10px;
            margin-top: 200px;
        }

            .jumbotron h1 {
                font-size: 3.5rem;
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                margin-bottom: 20px;
            }

            .jumbotron p {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 30px;
            }

            .jumbotron hr {
                border-color: #fff;
            }

        .btn-primary {
            background-color: #764ba2;
            border-color: #764ba2;
        }

            .btn-primary:hover {
                background-color: #5a389f;
                border-color: #5a389f;
            }

        .btn-success {
            background-color: #2ecc71;
            border-color: #2ecc71;
        }

            .btn-success:hover {
                background-color: #28b463;
                border-color: #28b463;
            }

        .login-partial-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 5px;
            margin-top: 50px;
        }

        .login-partial-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
        }

        .login-partial-input {
            margin-bottom: 15px;
        }

        .login-partial-button {
            background-color: #764ba2;
            border-color: #764ba2;
            color: #fff;
            font-weight: bold;
        }

            .login-partial-button:hover {
                background-color: #5a389f;
                border-color: #5a389f;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Welcome to School Monitoring System</h1>
            <p class="lead">Monitor and manage various aspects of your school</p>
            <hr class="my-4">
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
