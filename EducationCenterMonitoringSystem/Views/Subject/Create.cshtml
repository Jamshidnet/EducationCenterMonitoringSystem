@using MonitoringSystem.Application.UseCases.Subjects.Commands.CreateSubject;
@using MonitoringSystem.Application.UseCases.Teachers.Commands.CreateTeacher;
@using MonitoringSystem.Application.UseCases.Teachers.Models;
@model CreateSubjectCommmand

@{
    ViewData["Title"] = "Create Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optionally, specify a layout

    List<TeacherDto>? Teachers = ViewData["Teachers"] as List<TeacherDto>;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<h3>Create Subject</h3>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SubjectName">Subject Name:</label>
        <input asp-for="SubjectName" class="form-control" required />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label for="TeacherId">Teacher:</label>
        <select class="form-control" id="TeacherId" name="TeacherId" required>
            <option value="">Choose Teacher</option>
            @foreach (var teacher in Teachers)
            {
                <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
